<%= form_for @penjualan, html: {multipart: true, class: 'form-horizontal'} do |f| %>
    <% if @penjualan.errors.any? %>
        <div id="errors">
          <p>
            <%= @penjualan.errors.count %>
            Prevented this kategori from savings
          </p>
          <ul>
            <% @penjualan.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          <% if @penjualan.tanggal != nil %>
              <div class="form-group">
                <%= f.label :tanggal, class: "col-sm-3 control-label" %>
                <div class="col-sm-9">
                  <%= f.text_field :tanggal, class: "form-control" %>
                </div>
              </div>
          <% end %>
          <div class="form-group">
            <%= f.label :reseller_id, class: "col-sm-3 control-label" %>
            <div class="col-sm-9">
              <%= f.collection_select :reseller_id, @resellers, :id, :nama, {}, {class: "form-control"} %>
            </div>
          </div>
          <div class="form-group">
            <label for="exampleInputFile" class="col-sm-3 control-label">File input</label>
            <div class="col-sm-9">
              <%= file_field_tag :file %>
              <p class="help-block">Hanya upload file .xls, .xlsx</p>
            </div>
          </div>
          <%= f.hidden_field :status, value: "1" %>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-10">
              <%= f.button :submit, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
