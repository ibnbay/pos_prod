<%= form_for @rclass, html: { multipart: true, class: 'form-horizontal' } do |f| %>
    <% if @rclass.errors.any? %>
        <div id="errors">
          <p>
            <%= @rclass.errors.count %>
            Prevented this kategori from savings
          </p>
          <ul>
            <% @rclass.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="panel-body">
      <div class="form-group">
        <%= f.label :nama, class:"col-sm-3 control-label" %>
        <div class="col-sm-9">
          <%= f.text_field :nama, class:"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :status, class:"col-sm-3 control-label" %>
        <div class="col-sm-9">
          <div class="checkbox">
            <label>
              <%= f.check_box :status %>
            </label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-10">
          <%= f.button :submit, class:"btn btn-primary" %>
        </div>
      </div>

    </div>

<% end %>
